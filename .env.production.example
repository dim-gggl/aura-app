# =============================================================================
# AURA ART - PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in the actual values
# WARNING: Never commit .env file to version control!
# =============================================================================

# =============================================================================
# DOCKER BUILD ARGUMENTS
# =============================================================================
BUILD_DATE=2025-01-01T00:00:00Z
VERSION=1.0.0
VCS_REF=main

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# CRITICAL: Generate a unique secret key for production
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=REPLACE_WITH_RANDOM_50_CHARACTER_STRING

# Django settings module (DO NOT CHANGE in production)
DJANGO_SETTINGS_MODULE=aura_app.settings.production

# Debug mode (MUST be False in production)
DEBUG=False

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=aura-art.org,www.aura-art.org

# CSRF trusted origins (comma-separated with protocol)
CSRF_TRUSTED_ORIGINS=https://aura-art.org,https://www.aura-art.org

# =============================================================================
# DATABASE SETTINGS (PostgreSQL)
# =============================================================================

# Option 1: Single DATABASE_URL (recommended)
DATABASE_URL=postgresql://aura_user:STRONG_DB_PASSWORD@db:5432/aura_db

# Option 2: Individual variables (alternative)
POSTGRES_DB=aura_db
POSTGRES_USER=aura_user
POSTGRES_PASSWORD=STRONG_DB_PASSWORD_HERE
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=md5

# Volume paths for production (create these directories on host)
POSTGRES_DATA_PATH=/var/lib/aura/postgres

# =============================================================================
# REDIS CACHE (Optional but recommended)
# =============================================================================

# Redis connection URL
REDIS_URL=redis://:REDIS_PASSWORD@redis:6379/0

# Redis password (leave empty for no password, not recommended)
REDIS_PASSWORD=STRONG_REDIS_PASSWORD

# Cache key prefix
CACHE_KEY_PREFIX=aura_prod

# Volume path
REDIS_DATA_PATH=/var/lib/aura/redis

# Redis port (internal)
REDIS_PORT=6379

# =============================================================================
# STATIC & MEDIA FILES
# =============================================================================

# Static files URL
STATIC_URL=/static/

# Media files URL
MEDIA_URL=/media/

# Volume paths for static and media files
STATIC_PATH=/var/www/aura/static
MEDIA_PATH=/var/www/aura/media

# Force static collection on startup
FORCE_COLLECT_STATIC=true

# =============================================================================
# AWS S3 STORAGE (Optional - for media files)
# =============================================================================

# S3 bucket name (leave empty to use local storage)
AWS_STORAGE_BUCKET_NAME=

# AWS credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS region
AWS_S3_REGION_NAME=us-east-1

# Custom S3 endpoint (for S3-compatible services like DigitalOcean Spaces)
AWS_S3_ENDPOINT_URL=

# =============================================================================
# ADMIN PANEL
# =============================================================================

# Admin URL (change this to something unique for security)
ADMIN_URL=secure-admin-panel-xyz123/

# =============================================================================
# SUPERUSER CREATION (First deployment only)
# =============================================================================

# Set to true to create superuser on first deployment
CREATE_SUPERUSER=false

# Superuser credentials (only used if CREATE_SUPERUSER=true)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@aura-art.org
DJANGO_SUPERUSER_PASSWORD=CHANGE_THIS_PASSWORD

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================

# Nginx ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# WEB APPLICATION
# =============================================================================

# Web service port (internal, not exposed in production)
WEB_PORT=8000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# EMAIL SETTINGS (Configure for production)
# =============================================================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@aura-art.org
EMAIL_HOST_PASSWORD=YOUR_EMAIL_PASSWORD

# Default from email
DEFAULT_FROM_EMAIL=Aura Art <noreply@aura-art.org>
SERVER_EMAIL=server@aura-art.org

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session cookie age (in seconds, default: 2 weeks)
SESSION_COOKIE_AGE=1209600

# CSRF cookie age (in seconds, default: 1 year)
CSRF_COOKIE_AGE=31449600

# =============================================================================
# API SETTINGS
# =============================================================================

# JWT token lifetime (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=10
JWT_REFRESH_TOKEN_LIFETIME=10080

# API rate limiting
API_THROTTLE_ANON_RATE=5/min
API_THROTTLE_USER_RATE=200/min

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup S3 bucket (for offsite backups)
BACKUP_S3_BUCKET=aura-art-backups

# =============================================================================
# DEVELOPMENT/TESTING (Do not use in production)
# =============================================================================

# These should be commented out or removed in production

# DJANGO_SETTINGS_MODULE=aura_app.settings.dev
# DEBUG=True
# ALLOWED_HOSTS=*

# =============================================================================
# NOTES
# =============================================================================

# 1. Generate strong passwords for:
#    - SECRET_KEY (50+ characters)
#    - POSTGRES_PASSWORD
#    - REDIS_PASSWORD
#    - DJANGO_SUPERUSER_PASSWORD
#
# 2. Create required directories on host:
#    sudo mkdir -p /var/lib/aura/{postgres,redis}
#    sudo mkdir -p /var/www/aura/{static,media}
#    sudo chown -R $(whoami):$(whoami) /var/lib/aura /var/www/aura
#
# 3. Obtain SSL certificates:
#    sudo certbot certonly --standalone -d aura-art.org -d www.aura-art.org
#
# 4. Configure DNS:
#    - A record: aura-art.org -> YOUR_SERVER_IP
#    - A record: www.aura-art.org -> YOUR_SERVER_IP
#
# 5. Configure firewall:
#    sudo ufw allow 22/tcp    # SSH
#    sudo ufw allow 80/tcp    # HTTP
#    sudo ufw allow 443/tcp   # HTTPS
#    sudo ufw enable
#
# 6. After copying this file to .env, restrict permissions:
#    chmod 600 .env
#
# =============================================================================
